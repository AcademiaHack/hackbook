!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Hackbook
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    - if notice
      .alert.alert-success
        %p= notice
    - elsif alert
      .alert.alert-danger
        %p= alert
    .container
      .row
        .col-md-12.text-right
          - if @current_user
            = link_to "Cerrar sesion", session_path(id:1), method: :delete, class: 'btn btn-primary'
      = yield
